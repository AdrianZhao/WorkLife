@model WorkLife.Models.Applicant
@{
    ViewData["Title"] = "Create Applicant";
}

<h2>Create Applicant</h2>

<form asp-action="NewApplicantPage">
    <div class="form-group">
        <label asp-for="PersonName"></label>
        <input asp-for="PersonName" class="form-control" />
        <span asp-validation-for="PersonName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FamilyName"></label>
        <input asp-for="FamilyName" class="form-control" />
        <span asp-validation-for="FamilyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Region:</label>
        @foreach (var item in ViewBag.Countries)
        {
            <div>
                <input type="radio" asp-for="Region" value="@item.Value" checked="@(item.Value == ((SelectList)ViewBag.Countries).FirstOrDefault()?.Value)" />
                @item.Text
            </div>
        }
    </div>

    <div class="form-group">
        <label>Industry Areas:</label>
        <textarea name="industryAreasInput" class="form-control" rows="4"></textarea>
        @if (ViewData.ModelState.ContainsKey("industryAreasInput"))
        {
            <span class="text-danger">@Html.ValidationMessage("industryAreasInput")</span>
        }
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
